<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Eventify" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        !-- Customize other Material3 attributes -->
        <item name="colorOnPrimary">@color/blue</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>


        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>


    </style>
    
    <style name="Theme.Eventify" parent="Base.Theme.Eventify" />
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">
            @anim/slide_in_bottom
        </item>
        <item name="android:windowExitAnimation">
            @anim/slide_out_bottom
        </item>
    </style>
</resources>